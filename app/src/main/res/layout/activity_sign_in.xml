<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_In_Activity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
       app:layout_constraintBottom_toTopOf="@id/text"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_person_24"/>
<TextView
    android:id="@+id/text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Create your account"
    android:textColor="#000"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginBottom="400dp"
    app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:inputType="text"
        android:gravity="center"
        android:hint="Enter the name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shap1"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/text"/>
    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:gravity="center"
        android:hint="Enter the password"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape2"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/edit_name"/>


    <CheckBox
        android:id="@+id/chekeBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_password"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Would you like to confirm registration?"/>

    <Button
        android:id="@+id/button_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:background="@drawable/edit"
        app:layout_constraintTop_toBottomOf="@id/chekeBox"
        android:layout_marginTop="50dp"
        android:text="sign in"
        app:layout_constraintEnd_toEndOf="parent"/>



    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarday hava in account"
        app:layout_constraintTop_toBottomOf="@id/button_signin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="15sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>