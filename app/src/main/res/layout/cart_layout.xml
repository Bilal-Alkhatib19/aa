<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="20dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/tv_name_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_item"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="name"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text_name_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_name_cart"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_qune_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_name_cart"
            app:layout_constraintStart_toEndOf="@id/image_item"
            android:layout_marginTop="8dp"
            android:text="quntity"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/text_qune_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_name_cart"
            app:layout_constraintStart_toEndOf="@id/tv_qune_cart"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_price_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_qune_cart"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:text="price"
            app:layout_constraintStart_toEndOf="@id/image_item"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/text_price_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_qune_cart"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/tv_price_cart"
            android:textColor="@color/black"/>







    </androidx.constraintlayout.widget.ConstraintLayout>












</androidx.cardview.widget.CardView>