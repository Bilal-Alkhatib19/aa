<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6BBBB"
    tools:context=".profile_person_Activity">

    <ImageView
        android:id="@+id/profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shap_propile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_person_24" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="للتواصل معنا"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/face_book"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/shap_propile"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/face_book" />

    <TextView
        android:id="@+id/mass_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="فيس بوك"
        android:textSize="25sp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toEndOf="@id/face_book"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/call"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/call"
        android:background="#F5BABA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/face_book" />

    <TextView
        android:id="@+id/mass_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اتصل بنا"
        app:layout_constraintStart_toEndOf="@id/call"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_marginEnd="80dp"
        app:layout_constraintTop_toBottomOf="@id/mass_face"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/ModifyProfile"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:background="#F5BABA"
        app:layout_constraintTop_toBottomOf="@id/call"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/dowilod" />

    <TextView
        android:id="@+id/mass_modify_prifile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تعديل الملف الشخصي"
        app:layout_constraintStart_toEndOf="@id/ModifyProfile"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_marginEnd="80dp"
        app:layout_constraintTop_toBottomOf="@id/mass_call"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/logout"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/ModifyProfile"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/baseline_logout_24" />

    <TextView
        android:id="@+id/log_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تسجيل خروج  "
        app:layout_constraintStart_toEndOf="@id/ModifyProfile"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_marginEnd="80dp"
        app:layout_constraintTop_toBottomOf="@id/mass_modify_prifile"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>







</androidx.constraintlayout.widget.ConstraintLayout>